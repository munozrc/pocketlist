{
  "extends": "expo/tsconfig.base",
  "exclude": ["node_modules", ".expo"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "drizzle.config.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["./app/*"],
      "@drizzle/*": ["./drizzle/*"],
      "@features/*": ["./features/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
